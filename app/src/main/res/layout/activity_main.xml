<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mengqi.myappportfolio.MainActivity">

    <TextView
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/txt_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="#D1C4E9"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/popular_movies"
        android:id="@+id/btn_pop_movie"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />

    <Button
        android:background="#B39DDB"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/stock_hawk"
        android:id="@+id/btn_stock_hawk"
        android:layout_below="@+id/btn_pop_movie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />

    <Button
        android:background="#9575CD"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/build_it_bigger"
        android:id="@+id/btn_build_it_bigger"
        android:layout_below="@+id/btn_stock_hawk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />

    <Button
        android:background="#7E57C2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/make_your_app_material"
        android:id="@+id/btn_mk_ur_app"
        android:layout_below="@+id/btn_build_it_bigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />

    <Button
        android:background="#673AB7"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/go_ubiquitous"
        android:id="@+id/btn_go_ubiquitous"
        android:layout_below="@+id/btn_mk_ur_app"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />

    <Button
        android:background="#4527A0"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/capstone"
        android:id="@+id/btn_capstone"
        android:layout_below="@+id/btn_go_ubiquitous"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="sendMessage" />


</RelativeLayout>
